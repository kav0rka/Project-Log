<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<BorderPane fx:controller="controllers.LoginController" xmlns:fx="http://javafx.com/fxml">
    <center>
        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <padding><Insets top="5" right="5" bottom="5" left="5"/></padding>
            <Text text="User name: " GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <TextField fx:id="username" GridPane.rowIndex="1" GridPane.columnIndex="2"/>

            <Text text="Password: " GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <TextField fx:id="password" GridPane.rowIndex="2" GridPane.columnIndex="2"/>

            <Button
                    fx:id="loginButton"
                    GridPane.rowIndex="3"
                    GridPane.columnIndex="2"
                    text="Login"
                    onAction="#login"
                    GridPane.halignment="RIGHT"/>

        </GridPane>
    </center>
</BorderPane>